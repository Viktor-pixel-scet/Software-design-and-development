<Window x:Class="RpgGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RPG Гра - Створення Героя" 
        Height="700" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#454545"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#404040"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#454545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Foreground="#00FF9F"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#454545"/>
        </Style>
    </Window.Resources>

    <Border Padding="20" Background="#252525">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Background="#2D2D2D" 
                    CornerRadius="10" 
                    Padding="15" 
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Оберіть тип героя:" 
                             FontSize="18" 
                             FontWeight="Bold"
                             Foreground="#00FF9F"/>
                    <ComboBox x:Name="HeroTypeComboBox" 
                             SelectionChanged="HeroTypeComboBox_SelectionChanged"
                             Margin="0,10,0,0"
                             Height="30"
                             Foreground="Green">
                             
                        
                        <ComboBoxItem Content="Воїн"/>
                        <ComboBoxItem Content="Маг"/>
                        <ComboBoxItem Content="Паладін"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0" 
                         Header="Доступне спорядження" 
                         Margin="0,0,10,0">
                    <ScrollViewer>
                        <StackPanel Margin="10">
                            <Button Content="Додати Меч (+5 до Атаки)" 
                                    Click="AddSword_Click"/>
                            <Button Content="Додати Посох (+2 до Атаки, +7 до Магії)" 
                                    Click="AddStaff_Click"/>
                            <Button Content="Додати Броню (+5 до Захисту)" 
                                    Click="AddArmor_Click"/>
                            <Button Content="Додати Щит (+3 до Захисту)" 
                                    Click="AddShield_Click"/>
                            <Button Content="Додати Магічний Перстень (+3 до Магії)" 
                                    Click="AddMagicRing_Click"/>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>

                <GroupBox Grid.Column="1" 
                         Header="Характеристики героя" 
                         Margin="10,0,0,0">
                    <ScrollViewer>
                        <StackPanel Margin="10">
                            <TextBlock x:Name="HeroDescriptionText" 
                                     FontSize="16" 
                                     FontWeight="Bold"
                                     Foreground="#00FF9F"
                                     TextWrapping="Wrap"
                                     MaxWidth="1000"/>

                            <Border Background="#2D2D2D" 
                                    CornerRadius="5" 
                                    Margin="0,10" 
                                    Padding="10">
                                <StackPanel>
                                    <TextBlock Text="Характеристики:" 
                                             FontWeight="Bold" 
                                             Foreground="#00FF9F"/>
                                    <TextBlock x:Name="DamageText"/>
                                    <TextBlock x:Name="DefenseText"/>
                                    <TextBlock x:Name="MagicPowerText"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#2D2D2D" 
                                    CornerRadius="5" 
                                    Margin="0,10" 
                                    Padding="10">
                                <StackPanel>
                                    <TextBlock Text="Одягнене спорядження:" 
                                             FontWeight="Bold" 
                                             Foreground="#00FF9F"/>
                                    <ListBox x:Name="EquipmentListBox" 
                                           Height="200" 
                                           Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>
    </Border>
</Window>